<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shayla.questboardv1.QuestSlidePageFragment">

    <!-- fragment_screen_slide_page.xml
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >   -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal">
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/questToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_extra_large"
            android:textColor="@color/theme_orange"
            android:text="quest name"
            android:id="@+id/quest_name"
            android:paddingBottom="@dimen/activity_vertical_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:textColor="@color/theme_med_blue"
            android:text="@string/quest_description_label"
            android:id="@+id/quest_description_label" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:text="quest description"
            android:id="@+id/quest_description" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:textColor="@color/theme_med_blue"
            android:text="@string/quest_giver_name_label"
            android:id="@+id/giver_name_label" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:text="giver name"
            android:id="@+id/giver_name" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:id="@+id/giver_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        </LinearLayout>
</FrameLayout>
